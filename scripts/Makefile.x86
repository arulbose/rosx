export CONFIG_X86_SIMULATOR
CC = gcc
LD = gcc
AS = gcc
MKDIR_P = mkdir -p

#CFLAGS = -I include -Wall -m32 -g -fvar-tracking -DCONFIG_X86_SIMULATOR -D__KERNEL__ -D__GNUC__=4 -I kernel/include -I apps
CFLAGS = -I include -Wall -m32 -g -fvar-tracking -DCONFIG_X86_SIMULATOR -D__KERNEL__ -I kernel/include -I apps
LDFLAGS += -m32
OBJDIR = out
OUTDIR = out/apps out/kernel out/arch/x86 out/lib out/drivers/simulator

OBJS_GCC = apps/main.o \
       kernel/sched.o \
       kernel/task.o \
       kernel/queue.o \
       kernel/event.o \
       kernel/irq.o \
       kernel/init.o \
       kernel/mutex.o \
       kernel/timer.o \
       kernel/semaphore.o \
       kernel/logger.o \
       kernel/terminal.o \
       kernel/device.o \
       kernel/wait.o \
       drivers/simulator/x86sim.o \
       lib/vsprintf.o \
       lib/strto.o \
       lib/string.o \
       lib/charset.o \
       lib/div64.o \
       lib/rbtree.o \
       lib/ctype.o \
       arch/x86/x86_sim.o \
       arch/x86/osport.o	

OBJS_AS = arch/x86/preempt.o

OBJECTS_GCC = $(patsubst %,$(OBJDIR)/%,$(OBJS_GCC))
OBJECTS_AS = $(patsubst %,$(OBJDIR)/%,$(OBJS_AS))

.PHONY: directories rosex86 clean

all: directories rosex86

directories: $(OUTDIR)

$(OUTDIR):
	${MKDIR_P} $(OUTDIR)
	ln -s ../arch/x86 include/asm
	
$(OBJDIR)/%.o: %.c
	$(CC) -c -o $@ $< $(CFLAGS)

$(OBJDIR)/%.o: %.S
	$(AS) -c -o $@ $< $(CFLAGS)

rosex86: $(OBJECTS_GCC) $(OBJECTS_AS)
	$(LD) -o $@ $^ $(LDFLAGS)
         
clean:
	make -f scripts/Makefile.clean
